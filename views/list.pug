extends layout.pug
block content
  div(class= 'image-container')
    ul
      each val in list
        li(class='image-thumb')
          a(class='image-link' href=val.smallHref)
            img(src=val.b64i)
          div(class='image-thumb__crops')
            a(class='image-thumb__icon' alt='full size' href=val.fullHref) 💯
            a(class='image-thumb__icon' alt='small size' href=val.smallHref) 🖼
            a(class='image-thumb__icon' alt='instagram story' href=val.igStoryHref) ↕️

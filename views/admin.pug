extends html.pug
block header
  style(type='text/css').
    body {
      margin: 0 2em;
    }
    th {
      text-align: left;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }
    th, td {
      padding: 0.4em;
    }
    th:first-child, td:first-child {
      text-align: right;
    }
    td a {
      color: blue;
    }
block content
  body
    h1
      a(href="/") Image Hub
    h2 🚨 danger zone 🚨
    p Enter the text with what you want to delete
    table
      th send
      th effect
      tr
        td all
        td empty database and delete all images
      tr
        td db
        td empty thumbnail database
      tr
        td images
        td delete all images
      tr
        td storage
        td delete full-size images
      tr
        td stories
        td delete ig story images
      tr
        td thumb
        td delete thumbnail images
      tr
        td small
        td delete small images
      tr
        td colorname
        td set ig story background to 
          a(href='http://www.graphicsmagick.org/color.html') graphicsmagick color name
      tr
        td #000000
        td set ig story background to 
          a(href='http://www.graphicsmagick.org/color.html') hex color
          span —e.g. #00FF00
    p
      <form id="form" class="admin" action="/admin" method="post" enctype="multipart/form-data">
        <input type="text" name="command" >
        <input type="submit" value="Send">
      </form>
    h3 👁

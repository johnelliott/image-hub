{
  "name": "image-hub",
  "version": "1.0.0",
  "description": "LAN JPEG server and transformer",
  "main": "server.js",
  "scripts": {
    "start": "DEBUG=hub:* NODE_ENV=development node_modules/nodemon/bin/nodemon.js bin/www",
    "watch": "nodemon --ignore ./dist --exec browserify ./views/app.js -o ./dist/bundle.js",
    "etl": "DEBUG=hub* node_modules/nodemon/bin/nodemon.js etl.js",
    "db:reset": "rm -f cam.db && touch cam.db",
    "db:images": "sqlite3 cam.db 'select full_path from image order by full_path'",
    "status": "systemctl status image-hub-*.service && systemctl status nginx.service",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "image",
    "local"
  ],
  "author": "John Elliott <johnelliott703@gmail.com> (http://primitivemachine.com/)",
  "license": "",
  "dependencies": {
    "choo": "^6.6.0",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "ecstatic": "^3.0.0",
    "express": "^4.16.2",
    "gm": "^1.23.0",
    "listdirs": "^3.0.0",
    "node-exiftool": "^2.3.0",
    "node-watch": "^0.5.5",
    "pug": "^2.0.0-rc.4",
    "recursive-readdir": "^2.2.1",
    "sharp": "^0.18.4",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "nodemon": "^1.12.1",
    "standard": "^10.0.3"
  }
}
